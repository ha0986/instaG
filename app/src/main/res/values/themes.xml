<resources>
    <!-- Base application theme. -->
    <style name="Theme.Tikfollow" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/status</item>
        <item name="colorPrimaryVariant">@color/background</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/favorite</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/status</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="splashSscreenTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_image</item>
        <item name="android:statusBarColor">#332D39</item>
    </style>
</resources>